<Window x:Class="WpfApplication1.CreateReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="Калькулятор дезсредств | Создание расчета" Height="200" Width="400">
    <Grid Background="Lavender">
        <StackPanel  VerticalAlignment="Center">
            <Label Target="{Binding ElementName=ReportName}" Content="Название:" MaxWidth="300" FontSize="18"></Label>
            <TextBox x:Name="ReportName" Text="Введите название" MaxWidth="300" TextAlignment="Center" Margin="0 0 0 0">
            </TextBox>
            <Button Name="CreateReportButton" Click="CreateReportButton_OnClick" Background="White" Content="Создать отчет" MaxWidth="160" Margin="0 20 0 0" FontSize="16" />
        </StackPanel>
    </Grid>
</Window>
